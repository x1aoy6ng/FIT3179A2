{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#f0f4f8",
  "data": {
    "values": [
      {"stratum": "Urban", "unemployment_rate_percentage": 73.70},
      {"stratum": "Rural", "unemployment_rate_percentage": 57.70}
    ]
  },
  "transform": [
    {
      "joinaggregate": [
        {
          "op": "sum",
          "field": "unemployment_rate_percentage",
          "as": "total_rate"
        }
      ]
    },
    {
      "calculate": "(datum.unemployment_rate_percentage / datum.total_rate) * 100",
      "as": "stratum_percent"
    }
  ],
  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 50, "outerRadius": 110},
      "encoding": {
        "theta": {"field": "stratum_percent", "type": "quantitative"},
        "color": {
          "field": "stratum",
          "type": "nominal",
          "title": "Stratum",
          "scale": {"domain": ["Urban", "Rural"], "range": ["#cbb22b", "#83c5ad"]},
          "legend": {
            "titleFontSize": 14,
            "labelFontSize": 11,
            "symbolSize": 120
          }
        },
        "tooltip": [
          {"field": "stratum", "title": "Stratum"},
          {
            "field": "stratum_percent",
            "type": "quantitative",
            "title": "Unemployment Rate(%)",
            "format": ".1f"
          }
        ]
      }
    }
  ],
  "view": {"stroke": null}
}
